{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "build",
                "-S",
                ".",
                "-G",
                "Ninja"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake Build",
            "type": "shell",
            "windows": {
                "command": "powershell",
                "args": [
                    "-Command",
                    "if (-not (Test-Path build/CMakeCache.txt)) { cmake -B build -S . -G Ninja }; cmake --build build --parallel"
                ]
            },
            "linux": {
                "command": "bash",
                "args": [
                    "-c",
                    "[ ! -f build/CMakeCache.txt ] && cmake -B build -S . -G Ninja; cmake --build build --parallel"
                ]
            },
            "osx": {
                "command": "bash",
                "args": [
                    "-c",
                    "[ ! -f build/CMakeCache.txt ] && cmake -B build -S . -G Ninja; cmake --build build --parallel"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "CMake Clean",
            "type": "shell",
            "windows": {
                "command": "powershell",
                "args": [
                    "-Command",
                    "if (Test-Path build) { Remove-Item -Recurse -Force build }"
                ]
            },
            "linux": {
                "command": "rm",
                "args": ["-rf", "build"]
            },
            "osx": {
                "command": "rm",
                "args": ["-rf", "build"]
            },
            "problemMatcher": []
        },
        {
            "label": "CMake Reconfigure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "build",
                "-S",
                ".",
                "-G",
                "Ninja",
                "--fresh"
            ],
            "group": "build",
            "problemMatcher": []
        }
    ]
}
